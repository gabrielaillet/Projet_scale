<html>
    <head>
        <title>Annuaire Alumni</title>
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style ="padding-left: 8px; padding-right: 8px;">
                <img src="../static/image/IMT_Logo_fond_noir.png" width="10%">
                <a class="navbar-brand" href="#">Annuaire Alumni</a>
                    <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                      <a class="nav-item nav-link active" href="#">Tableau de bord</a>
                      <a class="nav-item nav-link" href="#">Promotion</a>
                      <a class="nav-item nav-link" href="#">TAF</a>
                    </div>
                </div>
                <form class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup2" action={{url_for("connection")}}>
                    <input class="btn btn-outline-success " type="submit" value = "Se connecter">
                </form>
            </nav>
        </header>
        <br>
            <p class="text-start text-center"> Nombre de fiches étudiants : {{ NbreStudent }}   |   Nombre d’entreprises : {{ NbreEntreprise }}</p>
            <br>
            <div class="container">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>TAF</th>
                        <th>Année</th>
                    </tr>
                </thead>
                <tbody>
                    {% for student in Students %}
                    <tr>
                        <td>{{ student.surname }}</td>
                        <td>{{ student.name }}</td>
                        <td>
                            {% for tafofstudent in TafofStudent %}
                                {%if tafofstudent[0] == student.student_id%}
                                    {% if tafofstudent[1] |length ==0 %}
                                        <div>{{'Pas de Taf'}}</div>
                                    {% else %}
                                    {% for taf in tafofstudent[1] %}
                                        <div>{{ taf.name }}</div>
                                    {% endfor %}
                                        {% endif %}
                                {% endif %}
                            {% endfor %}
                    <td>

                        {% for studentTaf in TafStudent%}
                            {%if studentTaf.student_id == student.student_id %}
                             <div>{{ studentTaf.year}}-{{studentTaf.year+1}}</div>
                            {% endif %}
                        {% endfor %}
                    </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div>
    </body>
</html>